    "drdplus/skills": "^2.0",
    "drdplus/destruction": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.3",
    "mockery/mockery": "~1.0",
    "roave/security-advisories": "dev-master",
    "composer/composer": "^1.8",
    "granam/exceptions-hierarchy": "^5.0"
  },
  "scripts": {
    "pre-autoload-dump": [
      "rm -f ./DrdPlus/Tests/AttackSkeleton && ln -s ../../vendor/drdplus/attack-skeleton/DrdPlus/Tests/AttackSkeleton ./DrdPlus/Tests"
    ]
