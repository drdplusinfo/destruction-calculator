{
  "name": "drd-plus/destruction-calculator",
  "license": "MIT",
  "type": "project",
  "description": "Have you broke in or broke a sword?",
  "keywords": [
    "DrD",
    "DrD plus",
    "destruction",
    "destroy",
    "crush",
    "calculator"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "granam/strict-object": "dev-master",
    "drd-plus/tables": "dev-master",
    "drd-plus/skills": "dev-master",
    "drd-plus/destruction": "dev-master",
    "drd-plus/attack-skeleton": "dev-master",
    "drd-plus/codes": "dev-master"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "~7.0",
    "mockery/mockery": "~1.0",
    "granam/exceptions-hierarchy": "dev-master"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "rm -f ./css/generic && ln -s ../vendor/drd-plus/attack-skeleton/css/generic ./css/",
      "rm -f ./js/generic && ln -s ../vendor/drd-plus/attack-skeleton/js/generic ./js/",
      "rm -f ./images/generic && ln -s ../vendor/drd-plus/attack-skeleton/images/generic ./images/",
      "find ./cache -mindepth 2 -type f -exec rm {} +"
    ],
    "post-update-cmd": [
      "php ./vendor/bin/assets --dir=css"
    ],
    "post-install-cmd": [
      "php ./vendor/bin/assets --dir=css"
    ]
  }
}
